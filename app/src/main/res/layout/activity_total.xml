<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F151B">

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="501dp"
        android:layout_height="142dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006"
        app:srcCompat="@drawable/bannerdonfranrbg" />

    <ListView
        android:id="@+id/lvUsers"
        android:layout_width="410dp"
        android:layout_height="716dp"
        android:background="#EEC800"
        android:cacheColorHint="#FFFFFF"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBanner"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="612dp"
        android:layout_height="50dp"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/fenix"
        android:text="Usuario: "
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBanner"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="612dp"
        android:layout_height="50dp"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/fenix"
        android:text="Total: "
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBanner"
        app:layout_constraintVertical_bias="0.153" />

    <Button
        android:id="@+id/btnPagado"
        android:layout_width="302dp"
        android:layout_height="86dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="360dp"
        android:backgroundTint="#EEC800"
        android:fontFamily="@font/fenix"
        android:text="Pagado"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        app:cornerRadius="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toEndOf="@+id/lvUsers"
        app:layout_constraintTop_toBottomOf="@+id/tvTotal"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>