<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/donfranicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/donfranicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.DonFranOrders"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".TakeOrderActivity"></activity>
        <activity android:name=".TotalActivity"></activity>
        <activity android:name=".ProductoActivity"></activity>

    </application>

</manifest>